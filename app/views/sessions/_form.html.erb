<%= form_for :session, :url => session_path do |form| %>
  <div class="form-group">
    <%= form.text_field :email, type: 'email', placeholder: 'Email', class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, placeholder: 'Password', class: "form-control" %>
  </div>

  <%= form.submit class: 'btn btn-primary pull-right' %>
  <%= link_to t('.sign_up'), sign_up_path, class: 'btn btn-link pull-right' %>
  <% #link_to t('.forgot_password'), new_password_path, class: 'btn btn-link pull-right' %>
<% end %>
