<div class="row">
  <div class="col-md-offset-4 col-md-4 well">
    <div id="clearance" class="password-reset">
      <h2><%= t '.title' %></h2>

      <p><%= t '.description' %></p>

      <%= form_for :password, :url => passwords_path do |form| %>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, type: 'email', class: "form-control" %>
        </div>
        <%= form.submit class: 'btn btn-primary pull-right' %>
      <% end %>
    </div>
  </div>
</div>
